<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TyskaForSmaUpptackare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TyskaForSmaUpptackare.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TyskaForSmaUpptackare</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <img src="~/img/burger1-svgrepo-com.svg" alt="Mobil navigation" style="height: 30px;" />
                    
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center gap-3">
                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link btn btn-primary text-black mx-1" asp-area="" asp-controller="Home" asp-action="Index">Hem</a>
                        </li>
                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link btn btn-primary text-black mx-1" asp-area="" asp-controller="Product" asp-action="Index">Produkter</a>
                        </li>
                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link btn btn-primary text-black mx-1" asp-area="" asp-controller="About" asp-action="Index">Om Oss</a>
                        </li>
                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link btn btn-primary text-black mx-1" asp-area="" asp-controller="Contact" asp-action="Index">Kontakt</a>
                        </li>

                        <!-- Version för mobila enheter: visas endast på mindre än lg -->
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Hem</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Produkter</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="About" asp-action="Index">Om Oss</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Index">Kontakt</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="navbar border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - TyskaForSmaUpptackare - En sida av Karin Ekenberg<a asp-area="" asp-controller="Home" asp-action="Privacy">Sekretesspolicy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
