@using TyskaForSmaUpptackare.Models;
@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero -->
<div class="p-5 text-center bg-image rounded-3 d-none d-md-block" style="
    background-image: url('/img/tfsu-hero-desktop.PNG');
    height: 400px;  
    background-repeat: no-repeat;
    background-size: cover;
  ">
    <div class="mask">
        <div class="d-flex justify-content-start align-items-end h-100">
            <div class="text-dark text-start">
                <h1 class="mb-3 text-white">Tyska för små upptäckare</h1>
                <h4 class="mb-3 text-white">Lär dig tyska</h4>
                <a class="btn btn-primary text-black mx-1" aria-label="Navigera till produktöversikt" asp-area="" asp-controller="Produkt" asp-action="Index">Kom igång</a>
            </div>
        </div>
    </div>
</div>
<!-- Hero -->
<!-- Hero mobile -->
<div class="p-5 text-center bg-image rounded-3 d-block d-md-none" style="
    background-image: url('/img/tfsu-hero-mobile.PNG');
    height: 600px;
    background-size: cover;
    background-repeat: no-repeat;
  ">
    <div class="mask">
        <div class="d-flex justify-content-start align-items-start h-100">
            <div class="text-dark text-start">
                <h1 class="mb-3">Tyska för små upptäckare</h1>
                <h4 class="mb-3">Lär dig tyska</h4>
                <a class="btn btn-primary text-black mx-1" aria-label="Navigera till produktöversikt" asp-area="" asp-controller="Produkt" asp-action="Index">Kom igång</a>
            </div>
        </div>
    </div>
</div>

    <section class="container-lg">
        <h2>Våra produkter</h2>
        <div class="row">
    @foreach (var product in Model.Products.Take(3))
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" />
                }
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                </div>
            </div>
        </div>
    }
    </div>
    <div class="text-center">
        <a class="btn btn-primary text-black mx-1" aria-label="Navigera till produktöversikt" asp-area="" asp-controller="Produkt" asp-action="Index">Se fler produkter</a>
    </div>
    
    </section>